<Window x:Class="AcaiFruitClasifier.SystemSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcaiFruitClasifier"
        mc:Ignorable="d"
        Title="System Settings" Height="200" Width="300"
        Background="#2C2C2C">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select Plotting Mode:" Foreground="White" Margin="0,0,0,10"/>
            <CheckBox Name="PlotInMainWindow" Content="Plot in Main Window" Foreground="White" 
                Checked="PlotInMainWindow_Checked" Unchecked="PlotInMainWindow_Unchecked"/>
            <CheckBox Name="PlotInDifferentWindows" Content="Plot in Different Windows" Foreground="White" 
                Checked="PlotInDifferentWindows_Checked" Unchecked="PlotInDifferentWindows_Unchecked"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="0,20,0,0" Background="#3C3C3C" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
